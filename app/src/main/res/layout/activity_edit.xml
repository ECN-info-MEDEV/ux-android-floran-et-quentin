<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity">

    <TextView
        android:id="@+id/Titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Vos Listes"
        android:textAllCaps="false"
        android:textColor="@color/rouge_spesa"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/plus_button"
        android:layout_width="72dp"
        android:layout_height="81dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/orange_spesa"
        android:clickable="true"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:soundEffectsEnabled="true"
        android:textDirection="locale"
        app:layout_constraintBottom_toTopOf="@+id/liste_course3"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="60dp"
        app:srcCompat="@android:drawable/ic_input_add" />

    <Button
        android:id="@+id/liste_course1"
        android:layout_width="352dp"
        android:layout_height="71dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/rouge_spesa"
        android:text="Anniversaire de Alan "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/rouge_spesa" />

    <Button
        android:id="@+id/liste_course3"
        android:layout_width="352dp"
        android:layout_height="71dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/rouge_spesa"
        android:text="Tarte aux pommes Miam!! "
        app:layout_constraintBottom_toTopOf="@+id/liste_course2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/rouge_spesa" />

    <Button
        android:id="@+id/liste_course2"
        android:layout_width="352dp"
        android:layout_height="71dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/rouge_spesa"
        android:text="La classique"
        app:layout_constraintBottom_toTopOf="@+id/liste_course1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/rouge_spesa" />

</androidx.constraintlayout.widget.ConstraintLayout>