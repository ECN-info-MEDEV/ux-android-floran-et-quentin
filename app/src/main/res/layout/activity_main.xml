<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF9F00"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="433dp"
        android:layout_height="301dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo1_le_bon" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="352dp"
        android:layout_height="71dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/rouge_spesa"
        android:text="Editer"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        app:icon="@android:drawable/ic_menu_edit"
        app:iconGravity="end"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:rippleColor="#FFFFFF"
        android:onClick="launchEditActivity"/>

    <Button
        android:id="@+id/utiliser_button"
        android:layout_width="352dp"
        android:layout_height="71dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/rouge_spesa"
        android:text="Utiliser"
        app:icon="@drawable/check"
        app:iconGravity="end"
        app:iconSize="85px"
        app:iconTint="#C3000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_button" />

    <Button
        android:id="@+id/stat_button"
        android:layout_width="352dp"
        android:layout_height="71dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/rouge_spesa"
        android:text="Statistiques"
        app:icon="@drawable/pngegg"
        app:iconGravity="end"
        app:iconSize="80px"
        app:iconTint="#A8000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/utiliser_button" />

    <Button
        android:id="@+id/liste_course2"
        android:layout_width="352dp"
        android:layout_height="71dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/rouge_spesa"
        android:text="Informations"
        app:icon="@android:drawable/ic_menu_info_details"
        app:iconGravity="end"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stat_button"
        app:strokeColor="@color/rouge_spesa" />
</androidx.constraintlayout.widget.ConstraintLayout>